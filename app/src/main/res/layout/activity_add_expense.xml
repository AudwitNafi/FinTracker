<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/bgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".acitivities.AddExpenseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add an Expense"
        android:textColor="@color/white"
        android:fontFamily="@font/imprima"
        android:textSize="40sp"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BDT"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:inputType="numberDecimal|numberSigned"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/expTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="#9E9E9E"
        android:hint="Title"
        android:layout_marginVertical="20dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/note"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:hint="Add a note"
        android:textColor="@color/white"
        android:textColorHint="#9E9E9E"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Category"
        android:textColor="@color/white"
        android:fontFamily="@font/imprima"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        />
    <!--on below line we are creating a recycler view-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryGrid"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        tools:listitem="@layout/expense_category" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/ripple_bg"
        android:backgroundTint="#7AA874"
        android:text="Save"
        android:textColor="@color/white"
        />

</LinearLayout>